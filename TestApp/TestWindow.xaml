<Window x:Class="TestApp.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
           Title="Прохождение теста" Height="600" Width="800">
    <Grid Margin="20">
        <TextBlock x:Name="QuestionTextBlock" Text="Вопрос" FontSize="20" VerticalAlignment="Top" />
        <StackPanel x:Name="AnswersPanel" Margin="0,60,0,100" VerticalAlignment="Top" />

        <Button Content="Далее" Width="120" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="NextButton_Click" />
    </Grid>
</Window>
