<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
            Title="Выбор теста" Height="400" Width="600">
    <Grid Margin="20">
        <TextBlock Text="Выберите предмет" FontSize="20" VerticalAlignment="Top" />
        <ComboBox x:Name="SubjectsComboBox" Margin="0,40,0,0" Height="30" Width="200" SelectionChanged="SubjectsComboBox_SelectionChanged" />

        <TextBlock Text="Выберите тест" FontSize="20" Margin="0,100,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="TestsComboBox" Margin="0,140,0,0" Height="30" Width="200" />

        <Button Content="Начать тест" Width="120" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="StartTestButton_Click" />
    </Grid>
</Window>
